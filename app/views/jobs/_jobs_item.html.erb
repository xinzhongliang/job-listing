<div class="row jobs-show">
  <div class="col-md-12 col-lg-10 col-lg-offset-1">
    <div class="pull-right">
        <%= link_to("立即应征", new_job_resume_path(job), class: "btn btn-info btn-sm", method: :get) %>
    </div>
    <p><%= link_to(render_highlight_content(job, @query_string), job_path(job)) %></p>


    <div class="row">
      <div class="col-md-10">
        <p>薪酬: <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </p>
      </div>

    </div>

    <div class="row">

      <div class="col-md-4 col-sm-6">
        <span><i class="fa fa-location-arrow" aria-hidden="true"></i>  <%= job.city %></span>
      </div>
      <div class="col-md-4 col-sm-6">
        <span><i class="fa fa-clock-o" aria-hidden="true"></i>  <%= time_ago_in_words(job.created_at) %> ago</span>
      </div>
      <div class="col-md-4 col-sm-6">
        <span><i class="fa fa-envelope" aria-hidden="true"></i>  <%= job.contact_email %></span>
      </div>
    </div>
  </div>
</div>
