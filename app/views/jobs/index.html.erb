<div class="col-md-10 col-centered">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>
            职位列表
            <span class="col-md-offset-2">
              <%= link_to("全部职位列表", jobs_path) %>
            </span>
          <div class="dropdown clearfix pull-right">
            <button class="btn btn-md btn-primary dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              排序
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
                <%= sort_link @q, :wage_lower_bound, "按照薪资下限排序" %>

              </li>
              <li>
                <%= sort_link @q, :wage_upper_bound, "按照薪资上限排序" %>
              </li>
              <li>
                <%= sort_link @q, :created_at, "按照创建时间顺序" %>
              </li>
            </ul>
          </div>
        </h3>
      </div>
    <div class="panel-body">
        <table class="table ">
          <thead>
            <tr>
              <td>职缺</td>
              <td>薪资下限</td>
              <td>薪资上限</td>
              <td>城市坐标</td>
              <td>分类</td>
              <td>公司</td>
              <td>刊登时间</td>
            </tr>
          </thead>
          <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><span class="button"><a class="btn btn-info btn-xs">留言 <%= job.posts.count %></span></a>
                <%= link_to(job.title, job_path(job)) %>
              </td>
              <td>
                <%= job.wage_lower_bound %>
              </td>
              <td>
                <%= job.wage_upper_bound %>
              </td>
              <td>
                <%= job.city %>
              </td>
              <td>
                <%= job.category %>
              </td>
              <td>
                <%= job.company %>
              </td>
              <td>
                <%= job.created_at.to_date %>
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
</div>
