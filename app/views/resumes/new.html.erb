<div class="container-fluid col-md-10 col-centered">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="container-fluid pull-left">
        <%= link_to("职位列表", jobs_path, :class => "btn btn-primary" ) %>
      </div>
      <br>

      <h3>提交履历到<%= @job.title %></h3>
      <hr>
      <%= simple_form_for [@job, @resume] do |f| %>
        <%= f.input :content,:input_html => { :wrap => :soft, :rows => 20}, :label => '可在此留下说明:', :label_html => { :class => 'type' }  %>
        <%= f.input :attachment, :label => "简历附件" %>
        <%= f.submit "送出", :class =>  "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
