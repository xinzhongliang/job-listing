<div class="panel col-md-12 col-centered">
  <div class="panel panel-default">
    <div class="panel-heading">评论列表</div>
    <div class="panel-body">
      <table class="table">
          <thead>
            <tr>
              <th>职位主题</th>
              <th>文章内容</th>
              <th>发表者</th>
              <th>发表时间</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td class="col-md-2"><%= post.job.title %></td>
              <td class="col-md-6"><%= simple_format(post.content) %></td>
              <td class="col-md-1"><%= post.user.email %></td>
              <td class="col-md-2"><%= post.created_at.to_date %></td>
              <td class="col-md-1"><%= link_to('Delete', job_post_path(post.job, post), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-primary btn-xs") %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>

</div>
